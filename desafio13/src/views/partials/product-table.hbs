{{#if products}}
	<table class='table table-dark'>
		<thead>
			<tr>

				<th scope='col'>Nombre</th>
				<th scope='col'>Precio</th>
				<th scope='col'>Foto</th>
			</tr>
		</thead>
		<tbody>
			{{#each products}}
				<tr>
					<td>{{this.name}}</td>
					<td>{{this.price}}</td>
					<td><img src='{{this.thumbnail}}' class='img-thumbnail' style='width:5%' alt='Imagen no encontrada' /></td>
				</tr>
			{{/each}}
		</tbody>
	</table>
{{else}}
	<div class='alert alert-warning' role='alert'>
		No se encontraron productos
	</div>
{{/if}}