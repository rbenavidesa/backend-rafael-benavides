html
    head 
        title='Mi primer PUG'
    body
        div(class="container" style="width:50%")
            div(class="starter-template")
                h1(class='text-primary')='Vista de Productos'
                if products
                    table(class='table table-dark')
                        thead
                            tr
                                th(scope='col')='Nombre'
                                th(scope='col')='Precio'
                                th(scope='col')='Foto'
                        tbody
                            each product in products
                                tr
                                    td=product.title
                                    td=product.price
                                    td
                                        img(src=product.thumbnail class='img-thumbnail' style='width:10%' alt='Imagen no encontrada')
                            
                        
                else
                    div(class='alert alert-warning' role='alert')='No se encontraron productos'

                form(action='/' method='GET')
                    div(class='form-group row' style='padding-top: 10px')
                        div(class='col-sm-10')
                            button(type='submit' class='btn btn-primary')='Agregar Producto'
                
            



    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
